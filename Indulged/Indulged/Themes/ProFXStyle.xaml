<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.Themes">

    <Style x:Key="FXZeroConfigStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#999999"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Text" Value="This filter does not require configurations"/>
    </Style>

    <Style x:Key="FXSectionTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#7d7d7d"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>

</ResourceDictionary>

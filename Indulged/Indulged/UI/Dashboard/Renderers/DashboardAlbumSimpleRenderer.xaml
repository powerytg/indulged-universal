<local:DashboardAlbumRendererBase
    x:Class="Indulged.UI.Dashboard.Renderers.DashboardAlbumSimpleRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Dashboard.Renderers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="16, 0, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="AlbumLabel" 
                   FontSize="28" FontWeight="Light" Foreground="#114f57"
                   TextWrapping="WrapWholeWords"
                   Grid.Column="0"/>
<!--
        <Line Grid.Column="1"
              X2="300" Stretch="Fill"
              Stroke="#a1a09b" StrokeDashArray="2,3" StrokeThickness="1"
              Margin="16, 0, 16, 0"/>

        <local:DashboardRoundedAlbumAvatarRenderer x:Name="AvatarView"
                                                   Width="42" Height="42"
                                                   Grid.Column="2" Margin="0, 0, 16, 0"/>
-->
    </Grid>
</local:DashboardAlbumRendererBase>

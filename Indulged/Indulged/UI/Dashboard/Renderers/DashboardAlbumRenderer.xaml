<local:DashboardAlbumRendererBase
    x:Class="Indulged.UI.Dashboard.Renderers.DashboardAlbumRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Dashboard.Renderers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Height="160">
    
    <Grid Margin="1">
        <Image x:Name="ImageView" Stretch="UniformToFill"
               HorizontalAlignment="Center"/>
        
        <TextBlock x:Name="AlbumLabel" 
                   FontSize="26" FontWeight="Thin" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   TextWrapping="WrapWholeWords"
                   Margin="10, 50, 40, 10"/>
                   
    </Grid>
</local:DashboardAlbumRendererBase>

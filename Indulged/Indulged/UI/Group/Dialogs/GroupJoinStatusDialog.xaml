<UserControl
    x:Class="Indulged.UI.Group.Dialogs.GroupJoinStatusDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Group.Dialogs"
    xmlns:common="using:Indulged.UI.Common.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Height="160">

    <UserControl.RenderTransform>
        <CompositeTransform/>
    </UserControl.RenderTransform>

    <Grid x:Name="LayoutRoot" Margin="50, 20, 50, 20">
        
        <common:StatusLoadingView x:Name="LoadingView"
                                  LoadingText="Sending request"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>

    </Grid>
</UserControl>

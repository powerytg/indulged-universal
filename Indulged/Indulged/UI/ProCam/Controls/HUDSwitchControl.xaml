<UserControl
    x:Class="Indulged.UI.ProCam.Controls.HUDSwitchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.ProCam.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Width="160" Height="50">

    <Grid x:Name="LayoutRoot" Tapped="LayoutRoot_Tapped">
        <Image x:Name="Arrow" Source="/Assets/ProCam/OSDArrow.png"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Width="18" Height="10" Margin="0, 0, 120, 0">
            <Image.RenderTransform>
                <RotateTransform x:Name="ArrowTransform"
                                 CenterX="9" CenterY="5" Angle="90" />
            </Image.RenderTransform>
        </Image>

        <Image x:Name="Label" Source="/Assets/ProCam/OSDOff.png"
               HorizontalAlignment="Right" VerticalAlignment="Center"
               Width="84" />

    </Grid>
</UserControl>

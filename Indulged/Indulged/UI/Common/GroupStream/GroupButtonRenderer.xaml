<local:GroupRendererBase
    x:Class="Indulged.UI.Common.GroupStream.GroupButtonRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Common.GroupStream"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button Style="{StaticResource GroupButtonStyle}"
            Click="Button_Click">
        <Button.Content>
            <StackPanel Orientation="Horizontal">
                <Image x:Name="AlertIcon" Source="/Assets/Dashboard/Alert.png" VerticalAlignment="Center"/>
                <Image x:Name="AdminIcon" Source="/Assets/Dashboard/Admin.png" VerticalAlignment="Center"/>
                <Image x:Name="PrivateIcon" Source="/Assets/Dashboard/Private.png" VerticalAlignment="Center"/>
                
                <TextBlock x:Name="TitleLabel"
                           VerticalAlignment="Center"
                           Margin="8"
                           Foreground="White" FontSize="14" FontWeight="Thin"/>
                
            </StackPanel>
        </Button.Content>
    </Button>
    
</local:GroupRendererBase>

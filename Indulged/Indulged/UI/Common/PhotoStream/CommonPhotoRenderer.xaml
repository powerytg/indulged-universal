<local:PhotoRendererBase
    x:Class="Indulged.UI.Common.PhotoStream.CommonPhotoRenderer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Common.PhotoStream"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="#444"
          SizeChanged="LayoutRoot_SizeChanged">

        <!--Image view-->
        <Image x:Name="ImageView" Stretch="UniformToFill"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!--Overlay view-->
        <local:CommonPhotoOverlayView x:Name="OverlayView"/>
        
    </Grid>

</local:PhotoRendererBase>

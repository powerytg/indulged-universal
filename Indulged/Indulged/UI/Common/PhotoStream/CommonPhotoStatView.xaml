<UserControl
    x:Class="Indulged.UI.Common.PhotoStream.CommonPhotoStatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.Common.PhotoStream"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Orientation="Horizontal">
        
        <StackPanel x:Name="ViewCountBadge" Orientation="Horizontal">
            <Image x:Name="ViewIcon" Source="/Assets/Common/View-Light.png" 
               VerticalAlignment="Center"
               Grid.Column="1" Width="11"
               Margin="4,4,0,4"/>
            <TextBlock x:Name="ViewLabel" Foreground="#ffffff" FontSize="14" FontWeight="Medium"
                       VerticalAlignment="Center" Margin="6, 4, 4, 4" Grid.Column="2"/>
        </StackPanel>
        
    </StackPanel>
</UserControl>

<UserControl
    x:Class="Indulged.UI.ProFX.Controls.FilterDropletControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Indulged.UI.ProFX.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Width="100" Height="100">

    <Grid x:Name="LayoutRoot">
        <Border x:Name="BackgroundBorder" Background="#1d2733" CornerRadius="6"
                BorderThickness="2" BorderBrush="Transparent" >

        </Border>

        <TextBlock x:Name="Label"
                   FontWeight="Normal" Foreground="White" FontSize="18" 
                   TextAlignment="Left" TextWrapping="Wrap" TextTrimming="WordEllipsis"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="6, 0, 26, 3" />

        <Image x:Name="Icon" HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="5" Visibility="Collapsed"
               Source="/Assets/ProFX/FXCheckmark.png" Width="27"/>
    </Grid>
</UserControl>